@using EntityLayer.Concrete
@model List<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container mx-1" style="width:auto;padding:2rem">
    <h2>Kullanıcı Listesi</h2>
    <hr />
    <br />
    <table class="table table-bordered table-hover table-striped" style="column-width:auto">
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Email</th>
            <th>Telefon Numarası</th>
            <th>Doğum Tarihi</th>
            <th>Hobileri</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.UserID</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@(((DateTime)item.BirthdayDate).ToString("dd-MMM-yyy"))</td>
                <td>@item.Hobbies</td>
            </tr>
        }
    </table>
    <br />
    <a href="/Application/AdminIndex" class="btn btn-primary">Anasayfaya Dön</a>
</div>
