@model EntityLayer.Concrete.User
@{
    Layout = null;
}

<!doctype html>

<html lang="en">
<head>
    <title>Proje Başvuru Uygulaması</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/login-form-20/css/style.css">


</head>
<body class="img js-fullheight" style="background-image: url(/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-2">
                    <h2 class="heading-section">Kullanıcı Kayıt Sayfası</h2>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">

                        @*<form action="#" class="login-form">*@
                        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
                        {

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.UserID)


                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Name, new { placeholder = "Adınız", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Surname, new { placeholder = "Soyadınız", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Surname)
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new { placeholder = "Email Adresiniz", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Phone, new { placeholder = "Telefon Numaranız", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Rumuz, new { placeholder = "Kullanıcı Adınız", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Rumuz)
                            </div>

                            @*<div class="form-group">
                                        @Html.PasswordFor(model => model.Password, new { placeholder = "Şifreniz", type="password", @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>*@

                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" name="Password" placeholder="Şifreniz" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                @Html.ValidationMessageFor(model=>model.Password)
                            </div>

                            @*<div class="form-group">
                                    @Html.TextBoxFor(model => model.BirthdayDate, new { placeholder = "Doğum Tarihiniz", type = "BirthdayDate", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.BirthdayDate, "", new { @class = "text-danger" })
                                </div>*@

                            <div class="form-group">
                                <input type="date" class="form-control" name="BirthdayDate" placeholder="Doğum Tarihinizi Girin" id="BirthdayDate" required/>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Hobbies, new { placeholder = "Hobileriniz", @class = "form-control" })
                                @*@Html.ValidationMessageFor(model => model.Hobbies, "", new { @class = "text-danger" })*@
                            </div>

                            @*<div class="form-group">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>*@

                            @*<div class="form-group">
                                    <input type="text" class="form-control" name="Surname" placeholder="Soyad" required>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" name="Email" placeholder="Email" required>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" name="Phone" placeholder="Telefon Numarası" required>
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" name="Rumuz" placeholder="Kullanıcı Adı" required>
                                </div>

                                <div class="form-group">
                                    <input id="password-field" type="password" class="form-control" name="Password" placeholder="********" required>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>

                                <div class="form-group">
                                    <input type="date" class="form-control" name="BirthdayDate" placeholder="Doğum Tarihinizi Girin" id="BirthdayDate" />
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" name="Hobbies" placeholder="Hobileriniz">
                                </div>*@

                            <div class="form-group">
                                <button class="form-control btn btn-primary submit px-3">Kayıt Ol </button>
                            </div>
                        }

                        @*</form>*@
                        @*<div class="social d-flex text-center">
                                <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Hesabın Var mı?</a>
                            </div>

                            <h3 class="mb-4 text-center">Hesabın Var mı?</h3>*@
                        @*<p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                            <div class="social d-flex text-center">
                                <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                                <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>*@
                    </div>
                </div>
            </div>
        </div>

    </section>

    <script src="~/login-form-20/js/jquery.min.js"></script>
    <script src="~/login-form-20/js/popper.js"></script>
    <script src="~/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/login-form-20/js/main.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>

