<!DOCTYPE html>
<html lang="en">
<head>
    <title>Proje Başvuru </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/Home/AdminHomePage">Anasayfa</a></li>
                <li><a href="/Application/AdminIndex">Başvuru Listesi</a></li>
                <li><a href="/Application/AdminOnayBekleyen">Onay Bekleyenler</a></li>
                @*<li class="active"><a href="/Application/AdminIndex">Başvuru Listesi</a></li>*@
                @if (User.IsInRole("admin"))
                {
                    <li><a href="/User/Index">Kullanıcılar</a></li>
                    <li><a href="/UserRole/Index">Kullanıcı Rolleri</a></li>
                    <li><a href="/Role/AddRole">Yeni Rol Ekle</a></li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a> @User.Identity.Name<span class="label label-info"></span></a></li>
                    <li><a href="/Login/Logout"><span class="glyphicon glyphicon-log-in"></span> Çıkış Yap</a></li>
                }
                else
                {
                    <a href="/Login/Index" class="btn btn-success">Login</a>
                    <a href="/Register/Index" class="btn btn-primary">Register</a>
                }
            </ul>
        </div>
    </nav>
    @RenderBody()
    @*@RenderSection("scripts", required: false)*@
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>